<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.devauxarthur.proutcalculator.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajoute un Prout:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="latitude"
        android:layout_marginTop="25dp"
        android:id="@+id/latitude"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="longitude"
        android:layout_marginTop="55dp"
        android:id="@+id/longitude"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Niveau de puanteur:"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="100dp"
        />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:max="100"
        android:id="@+id/puanteur"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="280dp"
        android:id="@+id/seekResult"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Envoie !"
        android:id="@+id/envoie"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:text="Résultat"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="latitude"
        android:layout_marginTop="300dp"
        android:id="@+id/latitudeResult"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="longitude"
        android:layout_marginTop="330dp"
        android:id="@+id/longitudeResult"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="degré de puanteur"
        android:layout_marginTop="10dp"
        android:id="@+id/puanteurResult"
        android:layout_below="@+id/longitudeResult"
        android:layout_alignParentStart="true" />


</RelativeLayout>
